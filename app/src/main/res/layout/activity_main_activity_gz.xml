<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.calculadoragz.MainActivityGZ"
    android:background="#de9b0a">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp">

        <EditText
            android:layout_width="316dp"
            android:layout_height="74dp"
            android:id="@+id/editText"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:textSize="30dp"
            android:layout_marginLeft="25dp"
            android:background="#fafcfa" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/button7"
            android:onClick="onClickNumber"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="30dp"
            android:layout_marginLeft="25dp"

            />


        <Button
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/button8"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onClickNumber"
            android:textSize="30dp"
            />


        <Button
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/button9"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="onClickNumber"
            android:textSize="30dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/buttonDivi"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="onClickOperator"
            android:textSize="30dp"/>


        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/button4"
            android:onClick="onClickNumber"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="30dp"
            android:layout_marginLeft="25dp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/button5"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onClickNumber"
            android:textSize="30dp"
           />


        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/button6"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onClickNumber"
            android:textSize="30dp"
           />


        <Button
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="x"
            android:id="@+id/buttonMulti"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="onClickOperator"
            android:textSize="30dp"
           />


        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/button1"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onClickNumber"
            android:textSize="30dp"
            android:layout_marginLeft="25dp" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/button2"
            android:onClick="onClickNumber"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="30dp"
           />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/button3"
            android:onClick="onClickNumber"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="30dp"
           />

        <Button
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/buttonResta"
            android:onClick="onClickOperator"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="30dp"
       />


        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/buttonpun"
            android:onClick="onClickNumber"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="30dp"
            android:layout_marginLeft="25dp"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/buttoncero"
            android:onClick="onClickNumber"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="30dp"
       />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/buttonIgual"
            android:onClick="onClickOperator"
            android:layout_row="4"
            android:layout_column="2"
            android:textSize="30dp"
       />

        <Button
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/buttonSuma"
            android:onClick="onClickOperator"
            android:layout_row="4"
            android:layout_column="3"
            android:textSize="30dp"
       />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:text="Acerca"
            android:id="@+id/buttonAcerca"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:textSize="30dp"
            android:layout_marginLeft="25dp" />


    </GridLayout>
</RelativeLayout>
